<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.movary" name="Movary" version="1.0.0" provider-name="Lee Peuker">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.service" library="service.py"/>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en_GB">Log movie plays to Movary</summary>
        <description lang="en_GB">This addon will automatically log movie plays to Movary.</description>
        <assets>
            <icon>resources/icon.png</icon>
            <screenshot>resources/screenshot-movary-dashboard.png</screenshot>
            <screenshot>resources/screenshot-movary-settings.png</screenshot>
        </assets>
        <disclaimer lang="en_GB">This addon is under active development!</disclaimer>
        <source>https://github.com/leepeuker/movary-kodi-addon</source>
        <license>MIT</license>
    </extension>
</addon>